<Page
    x:Class="LibraryOOPAssignment.RecentlyItemsViewed"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LibraryOOPAssignment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <GridView x:Name="screen">
            <GridView.Background>
                <AcrylicBrush BackgroundSource="HostBackdrop" TintColor="LightBlue" TintOpacity="0.8"/>
            </GridView.Background>
            <TextBlock x:Name="DefaultTXTBlock" Text="There are no items" FontSize="50" Margin="20"/>
        </GridView>
    </ScrollViewer>
</Page>
